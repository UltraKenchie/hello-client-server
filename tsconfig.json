{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": "./",
        "outDir": "./dist",
        "typeRoots": ["types", "node_modules/@types"],
        "types": ["node", "environment"]
    },
    "exclude": ["**/*.spec.ts"]
}
